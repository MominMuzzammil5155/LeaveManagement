@model LeaveManagement.Models.User
@{
    ViewBag.Title = "Register";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-gradient">
    <div class="card shadow-lg p-5" style="max-width: 400px; width: 100%; border-radius: 15px;">
        <h2 class="text-center mb-4 text-success">Create an Account</h2>

        <!-- Registration Form -->
        <form asp-action="Register" method="post">

            <!-- Full Name Input -->
            <div class="mb-4">
                <label asp-for="Name" class="form-label fw-semibold">Full Name</label>
                <input asp-for="Name" class="form-control form-control-lg shadow-sm" placeholder="Your Full Name" required />
            </div>

            <!-- Email Input -->
            <div class="mb-4">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control form-control-lg shadow-sm" placeholder="you@example.com" required />
            </div>

            <!-- Password Input -->
            <div class="mb-4">
                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                <input asp-for="Password" type="password" class="form-control form-control-lg shadow-sm" placeholder="Choose a strong password" required />
            </div>

            <!-- Role Dropdown -->
            <div class="mb-4">
                <label asp-for="Role" class="form-label fw-semibold">Role</label>
                <select asp-for="Role" class="form-select form-select-lg shadow-sm" required>
                    <option value="" disabled selected>-- Select Role --</option>
                    <option>Employee</option>
                    <option>Manager</option>
                </select>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-success w-100 py-2 shadow-lg btn-lg mb-3 transition-transform hover:scale-105">Register</button>

            <!-- Error Message -->
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center mt-2">@ViewBag.Error</div>
            }
        </form>

        <!-- Login Link -->
        <p class="text-center mt-3">
            Already have an account? <a href="@Url.Action("Login", "Account")" class="text-decoration-none text-success">Login here</a>.
        </p>
    </div>
</div>

<!-- Custom Background Gradient (Add in CSS) -->
<style>
    .bg-gradient {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }

    /* Input Focus Effects */
    .form-control:focus, .form-select:focus {
        border-color: #6a11cb;
        box-shadow: 0 0 8px rgba(106, 17, 203, 0.5);
    }

    /* Button Hover Effect */
    .btn:hover {
        background: #5a0e9e;
        transform: scale(1.05);
    }

    /* Custom Animation for Button */
    .transition-transform {
        transition: transform 0.2s ease-in-out;
    }

    .hover\:scale-105:hover {
        transform: scale(1.05);
    }
</style>
